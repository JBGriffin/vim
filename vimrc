" Ignore case when searching
set ignorecase
 
" Enable syntax coloring
syntax enable
 
" Set tabbing
set shiftwidth=4
set tabstop=4
set expandtab

set ai "Auto indent
set si "Smart indent
set wrap "Wrap lines
set number "Number the lines
 
" Set colorscheme
" colorscheme stereokai
colorscheme molokai
" colorscheme corporation
set t_Co=256

